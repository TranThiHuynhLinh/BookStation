@model BookStation.Models.Block

@{
    ViewData["Title"] = "Edit";
}
<head>
    <title>Confirm</title>
    <link rel="stylesheet" href="~/css/block_style.css" />
</head>
<div class="container wrap-container">
    <div class="col col-12">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input asp-for="UserId" class="form-control" hidden/>
            <input asp-for="NumOfReportedRv" class="form-control" hidden/>
            @if (Model.IsBlocked == 0)
            {
                <input asp-for="IsBlocked" class="form-control" value="1" hidden />
                <h1 class="text-danger">Are you sure you want to block this user?</h1>
            }
            else
            {
                <input asp-for="IsBlocked" class="form-control" value="0" hidden />
                <h1 class="text-primary">Are you sure you want to unblock this user?</h1>
            }
            <input type="submit" value="Yes" class="btn btn-outline-success submit-btn" />
            <a asp-action="Index" class="btn btn-outline-primary submit-btn">Back to List</a>
        </form>
    </div>
</div>



